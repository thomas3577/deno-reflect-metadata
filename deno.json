{
  "name": "@dx/reflect",
  "version": "0.2.4",
  "exports": {
    ".": "./mod.ts"
  },
  "tasks": {
    "lock": "deno cache --lock=deno.lock --lock-write ./mod.ts"
  },
  "compilerOptions": {
    "strict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@0.224"
  },
  "publish": {
    "exclude": [
      ".github",
      ".vscode",
      ".gitignore",
      ".editorconfig",
      "deno.lock",
      "**/*.test.ts"
    ]
  },
  "lint": {
    "rules": {
      "tags": [
        "recommended"
      ],
      "include": [
        "ban-untagged-todo",
        "no-deprecated-deno-api"
      ],
      "exclude": [
        "no-explicit-any",
        "no-inferrable-types"
      ]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 360,
    "indentWidth": 2,
    "singleQuote": true,
    "proseWrap": "preserve",
    "exclude": [
      ".vscode/**"
    ]
  }
}
