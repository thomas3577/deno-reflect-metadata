{
  "name": "@dx/reflect",
  "version": "0.2.14",
  "exports": {
    ".": "./mod.ts"
  },
  "tasks": {
    "lock": "deno cache ./mod.ts"
  },
  "compilerOptions": {
    "strict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1"
  },
  "publish": {
    "exclude": [
      ".github",
      ".vscode",
      ".gitignore",
      ".editorconfig",
      "deno.lock",
      "**/*.test.ts",
      "example.ts"
    ]
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 360,
    "indentWidth": 2,
    "singleQuote": true,
    "proseWrap": "preserve",
    "exclude": [
      ".vscode/**"
    ]
  }
}
